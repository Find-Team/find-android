<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="layout_profile_account">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/border_white_fill_round_10</item>
        <item name="android:backgroundTint">@color/gray_f2</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="tv_profile_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize" tools:ignore="SpUsage">13dp</item>
    </style>

    <style name="profile_info_content" parent="tv_profile_info">
        <item name="android:textColor">@color/gray_4f</item>
    </style>

    <style name="profile_info_title" parent="tv_profile_info">
        <item name="android:textColor">@color/black_33</item>
    </style>

    <style name="profile_info_default" parent="tv_profile_info">
        <item name="android:text">@string/profile_info_select</item>
        <item name="android:textColor">@color/gray_bd</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="wrap_black33_20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize" tools:ignore="SpUsage">20dp</item>
    </style>

    <style name="wrap_purple7d_12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/purple_7d5fff</item>
        <item name="android:textSize" tools:ignore="SpUsage">12dp</item>
    </style>

    <style name="full_screen_search_dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
    </style>
</resources>