<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_two_button_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="상대와의연결을해제합니다."
        android:textColor="@color/purple_7d5fff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_two_button_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="상대와의연결을해제합니다."
        android:textColor="@color/purple_7d5fff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_two_button_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_two_button_yes"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/border_white_fill_round_10"
        android:backgroundTint="@color/purple_e7e1ff"
        android:paddingVertical="13dp"
        android:text="@string/yes"
        android:textColor="@color/purple_7d5fff"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_two_button_title"
        tools:ignore="SpUsage" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_two_button_no"
        style="?android:borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/border_gray_line_round_10"
        android:text="@string/no"
        android:textColor="@color/gray_82"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_two_button_yes"
        app:layout_constraintStart_toStartOf="@id/btn_two_button_yes"
        app:layout_constraintTop_toBottomOf="@id/btn_two_button_yes" />

</androidx.constraintlayout.widget.ConstraintLayout>